// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(cuid())
  name      String   @unique
  category  String
  price     Int
  costPrice Int
  stock     Int
  minStock  Int
  unit      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]

  @@index([category])
}

model Sale {
  id          String   @id @default(cuid())
  date        String
  productId   String
  productName String
  quantity    Int
  price       Int
  total       Int
  createdAt   DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([productId])
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  image     String?
  role      String   @default("staff")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String
  userName  String
  action    String
  details   String
  timestamp DateTime @default(now())

  @@index([userId])
  @@index([timestamp])
}

model BusinessSettings {
  id            String   @id @default(cuid())
  businessName  String
  businessType  String   @default("retail")
  storeName     String?
  storeAddress  String?
  timezone      String   @default("Asia/Jakarta")
  currency      String   @default("IDR")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
